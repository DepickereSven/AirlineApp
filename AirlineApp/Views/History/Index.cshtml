@model IEnumerable<AirlineApp.Entities.Opgericht>

@{
    ViewData["Title"] = "Index";
}

<h2>Airline history details</h2>

<form asp-action="Find">
    <div class="form-group">
        <input type="text" id="keyword" name="keyword" class="form-control" placeholder="What do you want to search for?" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Sort" asp-route-field="code">Airline code</a>
            </th>
            <th>
                <a asp-action="Sort" asp-route-field="Opgericht">Opgericht</a>
            </th>
            <th>
                <a asp-action="Sort" asp-route-field="@Html.DisplayNameFor(model => model.Gestopt)">@Html.DisplayNameFor(model => model.Gestopt)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AirlineCodeNavigation.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opgericht1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gestopt)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.AirlineCode"><i class="fas fa-user-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>